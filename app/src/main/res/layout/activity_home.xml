<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnCompleteDailyTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:background="@drawable/botton_shape"
        android:text="Complete your daily survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vCompletedCircularShape"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/vCompletedCircularShape"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/not_completed_circular_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/vCompleted"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/ic_test_pen"
        app:layout_constraintBottom_toBottomOf="@+id/vCompletedCircularShape"
        app:layout_constraintEnd_toEndOf="@+id/vCompletedCircularShape"
        app:layout_constraintStart_toStartOf="@+id/vCompletedCircularShape"
        app:layout_constraintTop_toTopOf="@+id/vCompletedCircularShape"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvPEHResult"
        android:layout_width="330dp"
        android:layout_height="227dp"
        android:layout_marginTop="48dp"
        android:text="Your result:  \nProteins: \nEmollients: \nHumectant:"
        android:textSize="24dp"
        android:textStyle="normal|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCompleteDailyTest"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/porosityNavBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="780dp"
        android:background="@drawable/white_grey_border_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/navbar"></com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>